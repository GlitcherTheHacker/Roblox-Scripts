-- ⚡ USE TOOLS ⚡

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")

local player = Players.LocalPlayer
local PostSim = RunService.PostSimulation

-- === GUI SETUP ===
local gui = Instance.new("ScreenGui")
gui.Name = "NoAnimUseTools"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.Parent = game:GetService("CoreGui")

local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0, 165, 0, 65)
toggle.AnchorPoint = Vector2.new(1, 0.5)
toggle.Position = UDim2.new(1, -30, 0.5, 0)
toggle.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
toggle.Text = "NoAnimTools: OFF"
toggle.TextSize = 22
toggle.Font = Enum.Font.GothamBold
toggle.TextColor3 = Color3.new(1, 1, 1)
toggle.BorderSizePixel = 0
toggle.Active = true
toggle.Draggable = true
toggle.Parent = gui

local corner = Instance.new("UICorner", toggle)
corner.CornerRadius = UDim.new(0.35, 0)

-- RAINBOW OUTLINE EFFECT
local outline = Instance.new("UIStroke", toggle)
outline.Thickness = 2.8
outline.Color = Color3.fromRGB(255, 0, 255)
outline.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- RAINBOW ANIMATION THREAD
task.spawn(function()
	local t = 0
	while true do
		t += 0.015
		local r = (math.sin(t) * .5 + .5)
		local g = (math.sin(t + 2) * .5 + .5)
		local b = (math.sin(t + 4) * .5 + .5)
		local col = Color3.new(r, g, b)
		outline.Color = col
		toggle.TextColor3 = col
		task.wait()
	end
end)

-- === STATE ===
local active = false
local loopRunning = false

local function updateButton()
	if active then
		toggle.Text = "NoAnimTools: ON"
		toggle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
		toggle.TextColor3 = Color3.fromRGB(0, 0, 0)
	else
		toggle.Text = "NoAnimTools: OFF"
		toggle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
		toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
	end
end

-- === TOOL HANDLERS ===
local function equipAllTools()
	local char = player.Character
	if not char then return end
	local backpack = player:FindFirstChild("Backpack")
	if backpack then
		for _, tool in ipairs(backpack:GetChildren()) do
			if tool:IsA("Tool") then
				tool.Parent = char
			end
		end
	end
end

local function unequipAllTools()
	local char = player.Character
	if not char then return end
	local backpack = player:FindFirstChild("Backpack")
	if backpack then
		for _, tool in ipairs(char:GetChildren()) do
			if tool:IsA("Tool") then
				tool.Parent = backpack
			end
		end
	end
end

-- === ULTRA-FAST LOOP ===
local function toolLoop()
	if loopRunning then return end
	loopRunning = true
	task.spawn(function()
		while true do
			if active then
				local char = player.Character
				if char then
					equipAllTools()
					for _, tool in ipairs(char:GetChildren()) do
						if tool:IsA("Tool") then
							pcall(function()
								tool:Activate()
							end)
						end
					end
				end
			end
			PostSim:Wait() -- Subframe precision tick
		end
	end)
end

-- === TOGGLE FUNCTIONALITY ===
local function toggleState()
	active = not active
	updateButton()
	if active then
		equipAllTools()
	else
		unequipAllTools() -- Instantly unequip all tools when toggled off
	end
	if not loopRunning then
		toolLoop()
	end
end

-- === INPUT BINDINGS ===
toggle.MouseButton1Click:Connect(toggleState)
UIS.InputBegan:Connect(function(input, gp)
	if not gp and input.KeyCode == Enum.KeyCode.Q then
		toggleState()
	end
end)

-- === CHARACTER HANDLER ===
player.CharacterAdded:Connect(function(char)
	char:WaitForChild("HumanoidRootPart", 3)
	if active then
		task.wait(0.1)
		equipAllTools()
	else
		task.wait(0.1)
		unequipAllTools()
	end
end)

-- === INIT ===
updateButton()
toolLoop()
print("⚙️ USE TOOLS — Initialized")
