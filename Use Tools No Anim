-- ⚡ USE TOOLS NO ANIM ⚡

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")

local player = Players.LocalPlayer
local PostSim = RunService.PostSimulation

-- === GUI SETUP ===
local gui = Instance.new("ScreenGui")
gui.Name = "NoAnimUseTools"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Global
gui.Parent = game:GetService("CoreGui")

local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0, 165, 0, 65)
toggle.AnchorPoint = Vector2.new(1, 0.5)
toggle.Position = UDim2.new(1, -30, 0.5, 0)
toggle.BackgroundColor3 = Color3.fromRGB(255, 255, 255) -- white UI
toggle.Text = "NoAnimTools: OFF"
toggle.TextSize = 22
toggle.Font = Enum.Font.GothamBold
toggle.TextColor3 = Color3.fromRGB(0, 0, 0) -- black text
toggle.BorderSizePixel = 2
toggle.BorderColor3 = Color3.fromRGB(0,0,0) -- solid black border
toggle.Active = true
toggle.Draggable = true
toggle.Parent = gui

local corner = Instance.new("UICorner", toggle)
corner.CornerRadius = UDim.new(0.35, 0)

-- static outline
local outline = Instance.new("UIStroke", toggle)
outline.Thickness = 2.8
outline.Color = Color3.fromRGB(0,0,0) -- black
outline.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- === STATE ===
local active = false
local loopRunning = false

local function updateButton()
	if active then
		toggle.Text = "NoAnimTools: ON"
		toggle.BackgroundColor3 = Color3.fromRGB(255,255,255)
		toggle.TextColor3 = Color3.fromRGB(0,0,0)
	else
		toggle.Text = "NoAnimTools: OFF"
		toggle.BackgroundColor3 = Color3.fromRGB(255,255,255)
		toggle.TextColor3 = Color3.fromRGB(0,0,0)
	end
end

-- === TOOL HANDLERS ===
local function equipAllTools()
	local char = player.Character
	if not char then return end
	local backpack = player.Backpack
	if backpack then
		for _, tool in ipairs(backpack:GetChildren()) do
			if tool:IsA("Tool") then
				tool.Parent = char
			end
		end
	end
end

local function unequipAllTools()
	local char = player.Character
	if not char then return end
	local backpack = player.Backpack
	if backpack then
		for _, tool in ipairs(char:GetChildren()) do
			if tool:IsA("Tool") then
				tool.Parent = backpack
			end
		end
	end
end

-- === ULTRA-FAST LOOP ===
local function toolLoop()
	if loopRunning then return end
	loopRunning = true

	task.spawn(function()
		while true do
			if active then
				local char = player.Character
				if char then
					equipAllTools()
					for _, tool in ipairs(char:GetChildren()) do
						if tool:IsA("Tool") then
							pcall(function()
								tool:Activate()
							end)
						end
					end
				end
			end
			PostSim:Wait()
		end
	end)
end

-- === TOGGLE ===
local function toggleState()
	active = not active
	updateButton()

	if active then
		equipAllTools()
	else
		unequipAllTools()
	end

	if not loopRunning then
		toolLoop()
	end
end

toggle.MouseButton1Click:Connect(toggleState)

UIS.InputBegan:Connect(function(input,gp)
	if not gp and input.KeyCode == Enum.KeyCode.Q then
		toggleState()
	end
end)

-- === CHARACTER HANDLER ===
player.CharacterAdded:Connect(function(char)
	task.wait(0.1)
	if active then equipAllTools() else unequipAllTools() end
end)

updateButton()
toolLoop()

print("⚙️ NO ANIM USE TOOLS — INITILIZED")
