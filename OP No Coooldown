-- ⚡ No Cooldown (Super OP, Remote + Tool Spam) ⚡

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- Aggressive wait overrides
hookfunction(wait, function()
	return RunService.PostSimulation:Wait()
end)
hookfunction(task.wait, function()
	return RunService.PostSimulation:Wait()
end)
hookfunction(delay, function(_, func)
	task.spawn(func)
end)
hookfunction(spawn, function(func)
	task.spawn(func)
end)

-- Main spam loop
local function startNoCooldown()
	task.spawn(function()
		while true do
			local char = LocalPlayer.Character
			if char then
				for _, tool in ipairs(char:GetChildren()) do
					if tool:IsA("Tool") then
						-- Force equip + activate
						tool:Activate()
						if tool.Parent ~= char then
							tool.Parent = char
						end

						-- Spam FightEvent if it exists
						local fightEvent = tool:FindFirstChild("FightEvent")
						if fightEvent then
							fightEvent:FireServer()
						end
					end
				end
			end
			-- ⚠️ Key: this delay controls ping vs. power
			RunService.Heartbeat:Wait() -- fastest safe loop (can tweak to PostSimulation)
		end
	end)
end

-- Start when character spawns
LocalPlayer.CharacterAdded:Connect(function()
	task.wait(0.5)
	startNoCooldown()
end)

if LocalPlayer.Character then
	startNoCooldown()
end

print("⚔️ Ultra No Cooldown Loaded — Frame-Locked Max Power ⚔️")
