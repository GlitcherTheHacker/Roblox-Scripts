-- No Cooldown

local RunService = game:GetService("RunService")

hookfunction(wait, function()

    return RunService.Stepped:Wait()
end)

hookfunction(task.wait, function()
   
    return RunService.PostSimulation:Wait()
end)

hookfunction(delay, function(_, f)
    task.spawn(f)
end)

hookfunction(spawn, function(f)
    task.spawn(f)
end)

local tickCount = 0

task.spawn(function()
    while true do
        -- No yielding until absolutely necessary â€” only minimal micro-wait to prevent crash.
        tickCount += 1
      
        if tickCount % 10 == 0 then
            RunService.Heartbeat:Wait() -- prevent total freeze every few cycles
        end
    end
end)

print("ðŸ”¥ No Cooldown initialized â€” pushing engine tick rate to theoretical max.")
