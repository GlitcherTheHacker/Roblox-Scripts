local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- === WAIT OVERRIDES ===
-- Replace wait/task.wait with PostSimulation (max player-side speed)
hookfunction(wait, function()
    return RunService.PostSimulation:Wait()
end)

hookfunction(task.wait, function()
    return RunService.PostSimulation:Wait()
end)

-- Replace delay/spawn with task.spawn (non-yielding)
hookfunction(delay, function(_, func)
    task.spawn(func)
end)

hookfunction(spawn, function(func)
    task.spawn(func)
end)

-- Optional: replace task.defer for instant execution
hookfunction(task.defer, function(fn, ...)
    return task.spawn(fn, ...)
end)

-- === COOLDOWN NUKE ===
local function nukeCooldowns(obj)
    for _, v in ipairs(obj:GetDescendants()) do
        if v:IsA("BoolValue") or v:IsA("NumberValue") then
            local n = v.Name:lower()
            if n:find("cool") or n:find("cd") or n:find("debounce") or n:find("delay") then
                if v:IsA("BoolValue") then
                    v.Value = false
                    v.Changed:Connect(function() pcall(function() v.Value = false end) end)
                else
                    v.Value = 0
                    v.Changed:Connect(function() pcall(function() v.Value = 0 end) end)
                end
            end
        end
    end
end

-- Run on yourself and new descendants
pcall(function() nukeCooldowns(LocalPlayer) end)
LocalPlayer.DescendantAdded:Connect(function(d) pcall(function() nukeCooldowns(d) end) end)

-- === OPTIONAL FAST LOOP HELPER ===
-- You can bind super-fast spam tasks here
local function fastLoop(callback)
    task.spawn(function()
        while true do
            RunService.PostSimulation:Wait()
            callback()
        end
    end)
end

print("âœ… NoCooldown V11 loaded: Ultra Strong + Safe")
