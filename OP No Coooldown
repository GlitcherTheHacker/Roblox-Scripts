-- âš¡ No Cooldown â€” ULTRA OVERDRIVE âš¡
local RunService = game:GetService("RunService")

-- Hook core yields for max speed
hookfunction(wait, function() return RunService.PreAnimation:Wait() or RunService.Stepped:Wait() end)
hookfunction(task.wait, function() return RunService.PostSimulation:Wait() end)
hookfunction(delay, function(_,func) task.spawn(func) end)
hookfunction(spawn, function(func) task.spawn(func) end)

-- Ultra tick engine loop
task.spawn(function()
    local tickCounter = 0
    local MAX_TICKS_BEFORE_YIELD = 500
    while true do
        tickCounter += 1
        RunService.Heartbeat:Wait()
        if tickCounter >= MAX_TICKS_BEFORE_YIELD then
            tickCounter = 0
            RunService.Stepped:Wait()
        end
    end
end)

-- Optional: performance monitor
task.spawn(function()
    local frameCount, timeStamp = 0, os.clock()
    while true do
        frameCount += 1
        if os.clock() - timeStamp >= 1 then
            frameCount, timeStamp = 0, os.clock()
        end
        RunService.Heartbeat:Wait()
    end
end)

print("ðŸ”¥ No Cooldown â€” ULTRA OVERDRIVE initialized")
