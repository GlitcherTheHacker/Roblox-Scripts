-- âš¡ No Cooldown â€” ENGINE OVERDRIVE MODE âš¡

local RunService = game:GetService("RunService")

-- === HOOK CORE YIELDS ===
hookfunction(wait, function()
    -- Replace default wait with the fastest subframe scheduler
    return RunService.PreAnimation:Wait() or RunService.Stepped:Wait()
end)

hookfunction(task.wait, function()
    -- Directly links task.wait to the most responsive post-frame event
    return RunService.PostSimulation:Wait()
end)

hookfunction(delay, function(_, func)
    -- Executes immediately via task.spawn
    task.spawn(func)
end)

hookfunction(spawn, function(func)
    -- Removes spawn throttling
    task.spawn(func)
end)

-- === ULTRA-TICK ENGINE LOOP ===
local tickCounter = 0
local MAX_TICKS_BEFORE_YIELD = 500 -- controls safety micro-pauses

task.spawn(function()
    while true do
        -- Execute at theoretical max tick rate
        tickCounter += 1

        -- Run high-frequency internal event ping
        RunService.Heartbeat:Wait()

        -- Safety micro-yield every few hundred ticks to keep network stable
        if tickCounter >= MAX_TICKS_BEFORE_YIELD then
            tickCounter = 0
            RunService.Stepped:Wait()
        end
    end
end)

-- === PERFORMANCE MONITOR ===
task.spawn(function()
    local frameCount, timeStamp = 0, os.clock()
    while true do
        frameCount += 1
        if os.clock() - timeStamp >= 1 then
            frameCount, timeStamp = 0, os.clock()
        end
        RunService.Heartbeat:Wait()
    end
end)

print("ðŸ”¥ No Cooldown â€” Engine Overdrive initialized at max runtime speed.")
